<%= render partial: "shared/validation_message", collection: @room.errors.full_messages, as: :error_message %>

<%= form_for @room do |f| %>
<div class="field">
  <%= f.label :name, class: "label" %>
  <div class="control">
    <%= f.text_field :name, class: "input" %>
  </div>
</div>

<%= f.button 'Save', class: "button is-primary" %>
<% end %>